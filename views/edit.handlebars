<form action="/records/{{record._id}}?_method=PUT" method="POST" class="mt-3">
  <div class="col-md-4 m-auto">

    <div class="d-flex flex-row mb-5">
      <label
        class="col-sm-3 col-form-label"
        style="font-size: 1px"
      >*必填欄位</label>
      <div class="col-sm-10 align-self-end">
        <h5 class="ms-5">請修改你的支出</h5>
      </div>
    </div>

    <div class="row mb-3">
      <label for="name" class="col-sm-2 col-form-label">名稱*
        <span>:</span></label>
      <div class="col-sm-10">
        <input
          type="text"
          name="name"
          class="form-control"
          id="name"
          value="{{record.name}}"
          required
        />
      </div>
    </div>

    <div class="row mb-3">
      <label for="date" class="col-sm-2 col-form-label">日期*
        <span>:</span></label>
      <div class="col-sm-10">
        <input
          type="date"
          name="date"
          class="form-control"
          id="date"
          value="{{record.date}}"
          required
        />
      </div>
    </div>

    <div class="row mb-3">
      <label for="category" class="col-sm-2 col-form-label">類別*
        <span>:</span></label>
      <div class="col-sm-10">

        <select class="form-control" name="categoryId" id="category" required>
          <option
            value=""
            disabled
            selected
            hidden
          >{{record.categoryId.name}}</option>
          <option value="家居物業">家居物業</option>
          <option value="交通出行">交通出行</option>
          <option value="休閒娛樂">休閒娛樂</option>
          <option value="餐飲食品">餐飲食品</option>
          <option value="其他">其他</option>
        </select>

      </div>
    </div>

    <div class="row mb-3">
      <label for="amount" class="col-sm-2 col-form-label">金額*
        <span>:</span></label>
      <div class="col-sm-10">
        <input
          type="number"
          name="amount"
          class="form-control"
          id="amount"
          value="{{record.amount}}"
          required
        />
      </div>
    </div>

    <div class="mt-5" style="text-align: center">
      <button type="submit" style="width: 300px">送出</button>
    </div>

  </div>
</form>