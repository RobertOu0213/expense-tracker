<div class="d-flex flex-row col-md-7 m-auto mt-5">
  <h5>總金額: </h5>
  <h1 class="ms-5">100,000</h1>
</div>

<ul class="list-group mt-3">
  {{#each records}}
    <div class="col-md-7 m-auto">

      <li class="list-group-item">
        <div class="d-flex">
          <div class="d-flex flex-row me-auto">
            <div class="align-self-center me-2">
              <i class="fa-solid fa-house fa-lg"></i>
            </div>
            <div class="d-flex flex-column">
              <h4 style="display: inline">
                {{this.name}}
              </h4>
              <span style="font-size:1px">{{this.date}}</span>
            </div>
          </div>
          <div class="align-self-center me-3">{{this.amount}}</div>
          <div class="align-self-center">
            <a href="" class="btn btn-secondary">修改</a>
            <a href="" class="btn btn-danger">刪除</a>
          </div>
        </div>
      </li>
    </div>

  {{/each}}
</ul>